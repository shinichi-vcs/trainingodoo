<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hospital_management.list">
      <field name="name">hospital_management list</field>
      <field name="model">hospital_management.hospital_management</field>
      <field name="arch" type="xml">
        <tree>
          <field name="branch_name"/>
          <field name="address"/>
          <field name="phone_number"/>
          <field name="address"/>
        </tree>
      </field>
    </record>

    

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hospital_management.action_window">
      <field name="name">Hospital Management</field>
      <field name="res_model">hospital_management.hospital_management</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hospital_management.action_server">
      <field name="name">hospital_management server</field>
      <field name="model_id" ref="model_hospital_management_hospital_management"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Hospital Management" id="hospital_management.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Patient Management" id="hospital_management.menu_1" parent="hospital_management.menu_root"/>
    <menuitem name="Doctor Management" id="hospital_management.menu_2" parent="hospital_management.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="hospital_management.menu_1_list" parent="hospital_management.menu_1"
              action="hospital_management.action_window"/>
    <menuitem name="Server to list" id="hospital_management" parent="hospital_management.menu_2"
              action="hospital_management.action_server"/>

  </data>
</odoo>
